@model TrainingScoring.WebUI.Models.EvaluationFormDetailsViewModel

<h2>Create New Evaluation Form</h2>

<form asp-action="CreateEvaluationForm" method="post">
    <div class="mb-3">
        <label for="EvaluationFormCode" class="form-label">Evaluation Form Code</label>
        <input asp-for="EvaluationFormCode" class="form-control" id="EvaluationFormCode" />
        <span asp-validation-for="EvaluationFormCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="EvaluationFormName" class="form-label">Evaluation Form Name</label>
        <input asp-for="EvaluationFormName" class="form-control" id="EvaluationFormName" />
        <span asp-validation-for="EvaluationFormName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="AcademicYearId" class="form-label">Academic Year</label>
        <select asp-for="AcademicYearId" class="form-select" id="AcademicYearId">
            <option value="">Select Academic Year</option>
            @foreach (var academicYear in Model.AcademicYears)
            {
                <option value="@academicYear.AcademicYearId">@academicYear.SemesterCode</option>
            }
        </select>
        <span asp-validation-for="AcademicYearId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
