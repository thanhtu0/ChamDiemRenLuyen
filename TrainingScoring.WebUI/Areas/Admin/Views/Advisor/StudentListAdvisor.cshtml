            var checkboxes = document.querySelectorAll('.checkBox');
            checkboxes.forEach(function (checkbox) {
                checkbox.checked = event.target.checked;
            });
        });

        document.getElementById('duyetBtn').addEventListener('click', function () {
            var rows = document.querySelectorAll('tbody tr');
            rows.forEach(function (row) {
                var checkbox = row.querySelector('.checkBox');
                var diemBCS = row.querySelector('.diem-BCS');
                var diemGVCV = row.querySelector('.diem-GVCV');

                if (checkbox.checked) {
                    diemGVCV.textContent = diemBCS.textContent;
                }
            });
        });
    </script>
