@model List<TrainingScoring.DomainModels.EvaluationForm>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Quản lý phiếu đánh giá rèn luyện</title>
    <style>
        th:nth-child(1),
        th:nth-child(2),
        th:nth-child(3),
        td:nth-child(1),
        td:nth-child(3),
        td:nth-child(4),
        td:nth-child(5),
        td:nth-child(6),
        td:nth-child(7) {
            vertical-align: middle;
            text-align: center;
        }

        tr.bold-row td,
        tr.bold-row th {
            font-weight: bold;
        }

        tr.training-title td,
        tr.training-title th {
            background-color: #36b2fa;
        }

        tr.training-directory td,
        tr.training-directory th {
            background-color: #7ccbfd;
        }

        tr.training-content td,
        tr.training-content th {
            background-color: #b9e2fe;
        }

        tr.training-details td,
        tr.training-details th {
            background-color: #e0f0fe;
        }

        tr.training-total td,
        tr.training-total th {
            background-color: rgba(7, 43, 74, 0.5);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="card mt-5">
            <div class="card-header">
                <h3 class="text-uppercase">Quản lý phiếu đánh giá rèn luyện</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="training-title table-dark training-title">
                        <th colspan="2" style="width: 70%;">Nội dung đánh giá</th>
                        <th colspan="2" style="width: 15%;">Điểm rèn luyện / minh chứng</th>
                        <th colspan="2" style="width: 15%;"></th>
                        </thead>
                        <tbody>
                            @foreach (var evaluationForm in Model)
                            {
                                @foreach (var directory in evaluationForm.TrainingDirectories)
                                {
                                    <tr class="bold-row training-directory">
                                        <td>@directory.Order</td>
                                        <td>@directory.TrainingDirectoryName</td>
                                        <td colspan="2"></td>
                                        <td colspan="2"></td>
                                    </tr>

                                    @if (directory.TrainingContents != null && directory.TrainingContents.Any())
                                    {
                                        foreach (var content in directory.TrainingContents)
                                        {
                                            <tr class="training-content">
                                                <td>@content.Order</td>
                                                <td>@content.TrainingContentName</td>
                                                @if (content.MaxScore > 0)
                                                {
                                                    <td>@content.MaxScore</td>
                                                }
                                                else
                                                {
                                                    <td></td>
                                                }
                                                <td>
                                                    @if (content.IsProof == true)
                                                    {
                                                        <input type="checkbox" class="checkBox" name="is_MinhChung" checked>
                                                    }
                                                    else
                                                    {
                                                        <input type="checkbox" class="checkBox" name="is_MinhChung">
                                                    }
                                                </td>
                                                <td><i class="fas fa-edit text-info"></i></td>
                                                <td><i class="fas fa-trash text-danger"></i></td>
                                            </tr>
                                            @if (content.TrainingDetails != null && content.TrainingDetails.Any())
                                            {
                                                foreach (var detail in content.TrainingDetails)
                                                {
                                                    <tr class="training-details">
                                                        <td></td>
                                                        <td>@detail.TrainingDetailName</td>
                                                        <td>@detail.MaxScore</td>
                                                        <td>
                                                            @if (content.IsProof = true)
                                                            {
                                                                @if (detail.IsProof == true)
                                                                {
                                                                    <input type="checkbox" class="checkBox" name="is_MinhChung" checked>
                                                                }
                                                                else
                                                                {
                                                                    <input type="checkbox" class="checkBox" name="is_MinhChung">
                                                                }
                                                            }
                                                            else
                                                            {

                                                            }
                                                        </td>
                                                        <td><a href="#"><i class="fas fa-edit text-info"></i></a></td>
                                                        <td><a href="#"><i class="fas fa-trash text-danger"></i></a></td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>

