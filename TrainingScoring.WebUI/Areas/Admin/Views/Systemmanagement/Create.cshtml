@model TrainingScoring.DomainModels.EvaluationForm

@{
    ViewData["Title"] = "Create";
}

<h2>Create Evaluation Form</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EvaluationFormCode" class="control-label"></label>
        <input asp-for="EvaluationFormCode" class="form-control" />
        <span asp-validation-for="EvaluationFormCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EvaluationFormName" class="control-label"></label>
        <input asp-for="EvaluationFormName" class="form-control" />
        <span asp-validation-for="EvaluationFormName" class="text-danger"></span>
    </div>
    <!-- Add other fields as needed -->

    <button type="submit" class="btn btn-primary">Create</button>
</form>
